<script>
  async function submitActivity() {
    const namalengkap = document.getElementById('Nama_Lengkap').value.trim();
    const area = document.getElementById('Area').value.trim();
    const tanggal = document.getElementById('Tanggal').value.trim();
    const namaHub = document.getElementById('Nama_HUB').value.trim();
    const tipeHub = document.getElementById('Tipe_Hub').value.trim();
    const aktivitas = document.getElementById('Aktivitas').value.trim();
    const kendala = document.getElementById('Kendala').value.trim();
    const solusi = document.getElementById('Solusi').value.trim();
    const lampiran = document.getElementById('Lampiran').files[0];

    if (!namalengkap || !area || !tanggal || !namaHub || !tipeHub || !aktivitas) {
      alert("Harap lengkapi semua kolom yang wajib diisi.");
      return;
    }

    if (!lampiran) {
      alert("Harap upload lampiran file.");
      return;
    }

    document.querySelector('button[onclick="submitActivity()"]').disabled = true;
    document.getElementById('loading-popup').style.display = 'block';

    const form = document.getElementById("activity-form");
    const formData = new FormData(form);

    FormData.append("nama_lengkap", "namalengkap");
    FormData.append("area", "area");
    FormData.append("tanggal", "tanggal");
    FormData.append("nama_hub", "namaHub");
    FormData.append("tipe_hub", "tipeHub");
    FormData.append("aktivitas", "aktivitas");
    FormData.append("kendala", "kendala");
    FormData.append("solusi", "solusi");
    FormData.append("fileName", "lampiran.name");
    FormData.append("mimeType", "lampiran.type");
    FormData.append("fileContent", "fileContent");

    try {
  const response = await fetch('https://script.google.com/macros/s/AKfycbwDcjfECJlIdGHQRTOtZCHkBJznWmCPGozBh1CtC33pd43SkiIr-NxIxHjQwZtDdOKZ/exec', {
    method: 'POST',
    body: formData
  });

  const result = await response.json();
  console.log(result);
} catch (error) {
  console.error("❌ Upload gagal:", error);
}


</script>
<script>
  function closePopup() {
    document.getElementById('success-popup').style.display = 'none';
    document.getElementById('activity-form').reset();  // Reset formnya brok!
  }
</script>


</body>
</html>

    FormData.append("nama_lengkap", "namalengkap");
        area: area,
        tanggal: tanggal,
        nama_hub: namaHub,
        tipe_hub: tipeHub,
        aktivitas: aktivitas,
        kendala: kendala,
        solusi: solusi,
        fileName: lampiran.name,
        mimeType: lampiran.type,
        fileContent: fileContent
      };

    try {
  const response = await fetch('https://script.google.com/macros/s/AKfycbwDcjfECJlIdGHQRTOtZCHkBJznWmCPGozBh1CtC33pd43SkiIr-NxIxHjQwZtDdOKZ/exec', {
    method: 'POST',
    body: formData
  });

  const result = await response.text();
      document.getElementById('loading-popup').style.display = 'none';
      if (result === 'success') {
        document.getElementById('success-popup').style.display = 'block';
      } else {
        alert("Error kirim data: " + result);
      }
    } catch (err) {
      document.getElementById('loading-popup').style.display = 'none';
      alert("Error fetch data: " + err);
    } finally {
      document.querySelector('button[onclick="submitActivity()"]').disabled = false;
    }
    
    reader.readAsDataURL(lampiran);
  }
</script>
<script>
  function closePopup() {
    document.getElementById('success-popup').style.display = 'none';
    document.getElementById('activity-form').reset();  // Reset formnya brok!
  }
</script>


</body>
</html>
